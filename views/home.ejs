    <script>
        const can = document.getElementById('can');
        const tex = can.getContext('2d');



        let windowWidth = window.innerWidth;
        let windowHeight = window.innerHeight;

        let canvasDimension = (windowWidth > windowHeight) ? windowHeight : windowWidth;

        let radius = canvasDimension/7;

        let middle = canvasDimension/2;

        let thing = (radius/2) * Math.sqrt(3);

        document.addEventListener('DOMContentLoaded', () => {
            circler(middle, middle);
            circler(middle, middle-radius);
            circler(middle, middle+radius);
            circler(middle+thing, middle-radius/2);
            circler(middle+thing, middle+radius/2);
            circler(middle-thing, middle-radius/2);
            circler(middle-thing, middle+radius/2);
        })



        function circler(x, y) {
            tex.beginPath()
            tex.arc(x, y, radius, 0, 2 * Math.PI);
            tex.lineWidth = 1.5;
            tex.strokeStyle = 'white';
            tex.stroke();
            tex.closePath();
        }

